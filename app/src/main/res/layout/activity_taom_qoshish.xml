<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".TaomQoshish">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/teal_200">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taom Qo'shish"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black">

        <EditText
            android:id="@+id/edt_taomnomi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#A18A8787"
            android:hint="Taom Nomi"
            android:textAlignment="center"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black">
        <EditText
            android:id="@+id/edt_keraklimahsulotlar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Kerakli Mahsulotlar"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="#A18A8787"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:outlineAmbientShadowColor="@color/black">
        <EditText
            android:id="@+id/tartib"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:hint="Taom tayyorlanishi tartibi"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="#A18A8787"/>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/saqla_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Saqlash"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:backgroundTint="@color/teal_200"/>

</LinearLayout>